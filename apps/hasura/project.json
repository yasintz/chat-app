{
  "name": "hasura",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/hasura",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose up",
        "cwd": "apps/hasura"
      }
    },
    "console": {
      "executor": "nx:run-commands",
      "options": {
        "command": "hasura console",
        "cwd": "apps/hasura"
      }
    },
    "cli": {
      "executor": "nx:run-commands",
      "options": {
        "command": "hasura --database-name=default",
        "args": "",
        "cwd": "apps/hasura"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "hasura migrate status --database-name=default",
          "hasura metadata apply",
          "hasura migrate apply --all-databases",
          "hasura metadata reload",
          "echo \"\nDeploy successful! ðŸŽ‰\""
        ],
        "parallel": false,
        "cwd": "apps/hasura"
      }
    },
    "dumbdb": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["sh tools/generators/dumpdb/dumpdb.sh"],
        "parallel": false
      }
    },
    "loaddb": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["sh tools/generators/dumpdb/loaddb.sh"],
        "parallel": false
      }
    },
    "script-build": {
      "executor": "@nrwl/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/hasura",
        "main": "apps/hasura/main.ts",
        "tsConfig": "apps/hasura/tsconfig.app.json"
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/hasura/scripts/environments/environment.ts",
              "with": "apps/hasura/scripts/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "script-serve": {
      "executor": "@nrwl/js:node",
      "options": {
        "buildTarget": "hasura:script-build",
        "watch": true
      },
      "configurations": {
        "production": {
          "buildTarget": "hasura:script-build:production"
        }
      }
    }
  },
  "tags": []
}
