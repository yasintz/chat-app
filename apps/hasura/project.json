{
  "name": "hasura",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/hasura",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "echo \"\nüèÉ‚Äç‚ôÇÔ∏è Starting hasura...\n\"",
          "docker-compose -p=\"chat-app\" up -d",
          "echo \"\nüò¥ Waiting 30 seconds for hasura get ready\n\"",
          "sleep 3",
          "(nx deploy hasura && echo \"\n\nü§© Hasura started successfully.\") || echo \"üòî Please run 'nx deploy hasura' manually\""
        ],
        "cwd": "apps/hasura",
        "parallel": false
      }
    },
    "stop": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "echo \"\nüõë Stopping hasura...\n\"",
          "docker-compose -p=\"chat-app\" down",
          "docker volume rm chat-app_postgres"
        ],
        "cwd": "apps/hasura",
        "parallel": false
      }
    },
    "console": {
      "executor": "nx:run-commands",
      "options": {
        "command": "hasura console",
        "cwd": "apps/hasura"
      }
    },
    "cli": {
      "executor": "nx:run-commands",
      "options": {
        "command": "hasura --database-name=default",
        "args": "",
        "cwd": "apps/hasura"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "echo \"\nüöÄ Deploying hasura...\"",
          "hasura migrate status --database-name=default",
          "hasura metadata apply",
          "hasura migrate apply --all-databases",
          "hasura metadata reload",
          "echo \"\nüéâ Deploy successful!\""
        ],
        "parallel": false,
        "cwd": "apps/hasura"
      }
    },
    "dumpdb": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["sh tools/generators/db/dumpdb.sh"],
        "parallel": false
      }
    },
    "loaddb": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["sh tools/generators/db/loaddb.sh"],
        "parallel": false
      }
    },
    "script-build": {
      "executor": "@nrwl/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/hasura",
        "main": "apps/hasura/main.ts",
        "tsConfig": "apps/hasura/tsconfig.app.json"
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/hasura/scripts/environments/environment.ts",
              "with": "apps/hasura/scripts/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "script-serve": {
      "executor": "@nrwl/js:node",
      "options": {
        "buildTarget": "hasura:script-build",
        "watch": true
      },
      "configurations": {
        "production": {
          "buildTarget": "hasura:script-build:production"
        }
      }
    }
  },
  "tags": []
}
